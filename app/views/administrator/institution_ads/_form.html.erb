<%= simple_form_for([:administrator, @institution_ad]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :content %>
    <%= f.input :email %>
    <%= f.input :website %>
    <%= f.input :address %>
    <%= f.input :price %>
  </div>
  <div class="field">
	<%= f.label :institution_id %>
	<br />
	<%= f.collection_select :institution_id, Institution.order(:name), :id, :name, include_blank: true, :prompt => "- Select Institution -" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
