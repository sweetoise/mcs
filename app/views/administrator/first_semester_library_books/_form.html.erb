<%= simple_form_for ([:administrator, @first_semester_library_book]), :html => { :multipart => true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :author %>
    <%= f.input :book_pages %>
    <%= f.input :description %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field">
	  <%= f.label :first_semester_course_id %><br />
	  <%= f.collection_select :first_semester_course_id, FirstSemesterCourse.order(:code), :id, :code, include_blank: true, :prompt => "- Select First Semester Course -" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
