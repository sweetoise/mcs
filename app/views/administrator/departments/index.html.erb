  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= department.name %></td>
    <td><%= department.faculty.name %></td>
    <td><%= department.institution.name %></td>
    <td><%= link_to 'Show', [:administrator, department] %></td>
    <td><%= link_to 'Edit', edit_administrator_department_path(department) %></td>
    <td><%= link_to 'Destroy', [:administrator, department], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

