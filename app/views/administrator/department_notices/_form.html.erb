<%= simple_form_for([:administrator, @department_notice]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :date %>
    <%= f.input :signed_by %>
  </div>
  <div class="field">
	<%= f.label :department_id %>
	 <br />
	<%= f.collection_select :department_id, Department.order(:name), :id, :name, include_blank: true, :prompt => "- Select Institution -" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
