<%= simple_form_for([:administrator, @first_semester_course_outline]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :topic %>
    <%= f.input :book_url %>
    <%= f.input :video_url %>
    <%= f.input :content %>
  </div>
  <div class="field">
	  <%= f.label :first_semester_course_id %><br />
	  <%= f.collection_select :first_semester_course_id, FirstSemesterCourse.order(:code), :id, :code, include_blank: true, :prompt => "- Select First Semester Course -" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
