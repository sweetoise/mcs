<% @department_updates.each do |department_update| %>
  <tr>
    <td><%= department_update.title %></td>
    <td><%= department_update.content %></td>
    <td><%= department_update.signed_by %></td>
    <td><%= department_update.date %></td>
    <td><%= department_update.department_id %></td>
    <td><%= link_to 'Show', [:administrator, department_update] %></td>
    <td><%= link_to 'Edit', edit_department_update_path(department_update) %></td>
    <td><%= link_to 'Destroy', [:administrator, department_update], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

