<%= simple_form_for([:administrator, @institution_update]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
  </div>
  <div class="field">
     <%= f.label :institution_id %>
	   <br />
	 <%= f.collection_select :institution_id, Institution.order(:name), :id, :name, include_blank: true, :prompt => "- Select Institution -" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
