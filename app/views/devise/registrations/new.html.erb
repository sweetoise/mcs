<html>
	<head>
		<script src="../javascripts/jquery-1.8.2.min.js"></script>
        <script src="../javascripts/jquery.bxslider.js"></script>
        <link href="../stylesheets/jquery.bxslider.css" rel="stylesheet" />
	</head>
<body>
<div class="listings_pagecontent">
	<div class="signup_container">
		<div class="divider_container"></div>	
		<div class="signupform_container">
			<table class="sigupform_table", border="0", cellspacing="4">	
					<%= simple_form_for(:user, :url => registration_path(:user)) do |f| %>
					<tr>
						<td class="listings_error_div">
							<% if @user.errors.any?  %>
                                <ul>
                               <% @user.errors.full_messages.each do |msg| %>
                                    <li><%= msg %></li>
                               <% end %>
                                </ul>
                            <% end -%>
						</td>
					</tr>
					<div class="form-inputs">
					
						<tr>
							<td><%= f.input :name, :required => true, :autofocus => false, label: false, input_html: { class: 'signup_username_input' } %></td>
					    </tr>
					    <tr>
					    	<td><%= f.input :email, :required => true, :autofocus => false, label: false, input_html: { class: 'signup_email_input' } %></td>
					    </tr>
						
						<tr>
							<td><%= f.input :password, :required => true, :autofocus => false, label: false, input_html: { class: 'signup_password_input' } %></td>
						</tr>
						<tr>
							<td><%= f.input :password_confirmation, :required => true, :autofocus => false, label: false, input_html: { class: 'signup_confirm_password_input' } %></td>
						</tr>
					</div>
					<div class="form-actions">
						<tr>
							<td><%= f.submit '', class: 'signup_submit_button' %></td>
						</tr>
					</div>
				  <% end %> 
				</tr>
			</table>
		</div>
	</div>
	
	<div class="updates_slideshow_container">
		<div class="slideshow_container">
			<ul class="bxslider">
              <li><img src="../images/div_1.jpg" title="An Energy Conservation Company"></li>
              <li><img src="../images/div_2.jpg" title="Designers and Manufactors of Quality Lighting Controls"></li>
              <li><img src="../images/div_3.jpg" title="Caption to go here"></li>
              <li><img src="../images/div_4.jpg" title="Anatomy of a dragon"></li>
            </ul>
		</div>
		<div class="latest_updates_container">
			<div class="updates_title">News and Updates</div>
			<div class="updates_div">
			    <table>			
			   <% @updates.each do |update| %>
                <tr class="event_lists_description">
                  <td class="event_updates"><%= update.event.name %></td>
                  <td class="event_description">
                  	  <% if update.description.length > 50 %>
                  	    <%= truncate update.description, length: 50 %>
                  </td>
                  <td class="listings_readmore_link"><%= link_to 'Read more', update %></td> 
                      <% else %>
                        <%= update.description %>
                      <% end %>   
                </tr>
               <% end %>
            </table>
            </div>
		</div>
	</div>	
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('.bxslider').bxSlider({
        mode: 'fade',
        auto: true,
        speed:800,
        pause:10000,
        autoControls: true
    });
  });
</script>
</body>
</html>
