<% if @first_semester_course%>

<div class="course_code_detail">
  <%= @first_semester_course.code %> - <%= @first_semester_course.title%>
</div>
<div class="first_semester_course_heading">
  <table border="0">
	<tr>
		<td>
			<div class="first_semester_course_image">
			</div>
		</td>
		<% if @first_semester_course.description.length > 235 %>
		  <td>
		    <div class="first_semester_course_description">
			   <%= truncate @first_semester_course.description, length: 235 %>
		    </div>
	      </td>
	    <% else %>
		  <td>
		    <div class="first_semester_course_description">
			   <%= @first_semester_course.description %>
		    </div>
	      </td>
	    <% end %>
		<td>
			<div class="first_semester_course_library_books_details">
				<div class="reading_materials_container">[ free to read ]</div> 
				<% @first_semester_course.first_semester_library_books.each do |book| %>                            	
                  <% if book.name == nil %>
                  <% else %>                                          		                        			
                     <div class="library_book_name"><b><%= link_to book.name, :controller => 'update_semester_course', :action => 'show', :id => book %></b> by: <%= book.author %></div>
                  <% end %>                            	                                   		                            	                               	   
                <% end %>
			</div>
		</td>
	</tr>
  </table>
</div>
<% else %>
<% end %>


