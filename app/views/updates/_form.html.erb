<%= simple_form_for(@update) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.label :event %>
    <%= f.collection_select :event_id, Event.order(:name), :id, :name, include_blank: false, :prompt => "- Select Event -" %>
    <%= f.input :description %>   
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
